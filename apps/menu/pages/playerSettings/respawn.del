Button PAGE_RESPAWN_BUTTON_APPLY: Button.Ability2;

Component PageRespawnMenuItem() {
  Component respawn = new Component(PAGE_RESPAWN_NAME);
  respawn.AddDescription($"Press {ButtonFormatterSingle(PAGE_RESPAWN_BUTTON_APPLY)}â€‹ to apply");
  respawn.onButtonDown = (button, it) => {
