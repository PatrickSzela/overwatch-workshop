String PAGE_RESURRECT_NAME: 'Resurrect';

Button PAGE_RESURRECT_BUTTON_APPLY: Button.Ability2;

Component PageResurrectMenuItem() {
  Component resurrect = new Component(PAGE_RESURRECT_NAME);
  resurrect.AddDescription($"Press {ButtonFormatterSingle(PAGE_RESURRECT_BUTTON_APPLY)}â€‹ to apply");
  resurrect.onButtonDown = (button, it) => {
