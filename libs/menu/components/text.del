import './component.del';

class Text {
  public static Component New(
    in String label = ' ',
    in Color color = COLOR_NEUTRAL,

    in (() => void) onRender = null
  ): Component.New(
    type: ComponentType.Text, 
    label: label,
    color: color,
    disabled: true,

    onRender: onRender
  );

  public static String Render(ref Component component, ref Component child) {
    return child.renderedText || component.label;
  }
}
