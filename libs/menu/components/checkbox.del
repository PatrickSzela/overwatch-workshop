import './toggle.del';

class Checkbox: Toggle
{
  public static Button BUTTON_TOGGLE: Button.Ability2;

  public constructor(
    in String text, 
    in Boolean defaultChecked = null,
    in Component child = null
  ) {
    ToggleConstructor(text, defaultChecked, child);
  }

  public override String Render(String childText! = null) "[Checkbox] Render" {
    onRender(this);
    return $"{checked ? "[✓]" : "[    ]"}​ {childText || text}";
  }
}